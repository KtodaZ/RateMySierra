{
  "manifest_version": 2,
  "name": "RateMySierra",
  "description": "Links Rate My professor to Sierra College's MySierra website",
  "version": "1.0.3.1",

  "author": "Kyle Szombathy",
  "author": "William Hexberg",

  "icons": {
    "128": "icon.png"
  },

  "page_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage",
    "http://www.ratemyprofessors.com/search.jsp?query=*",
    "http://www.ratemyprofessors.com/ShowRatings.jsp?tid=*",
    "https://banprodssb.sierracollege.edu:8810/PROD/pw_sigsched.p_process"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["https://banprodssb.sierracollege.edu:8810/PROD/pw_sigsched.p_process"],
      "css": ["jquery-ui.min.css", "jquery.qtip.css"],
      "js": ["jquery-1.11.3.min.js", "jquery-ui.min.js", "jquery.qtip.js", "main.js"]
    }
  ]
}
